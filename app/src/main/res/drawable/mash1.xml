<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#F7F7F7" />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="4px"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">

            <solid android:color="#F7F7F7" />
            <corners android:radius="10dp" />


        </shape>

    </item>


</layer-list>