<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#5840BB"
                android:centerColor="#5840BB"
                android:endColor="#5840BB"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#fff" />

            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#5840BB"
                android:centerColor="#5840BB"
                android:endColor="#5840BB"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#28ABE3" />

            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
        </shape>
    </item>
</selector>