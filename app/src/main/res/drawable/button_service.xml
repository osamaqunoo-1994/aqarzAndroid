<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:centerColor="#814C99" android:endColor="#814C99" android:startColor="#814C99" />
            <stroke android:width="0dp" android:color="#fff" />

            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="#ffffff" android:endColor="#ffffff" android:startColor="#ffffff" />
            <stroke android:width="1dp" android:color="#814C99" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>