<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:centerColor="#5840BB" android:endColor="#5840BB" android:startColor="#5840BB" />
            <stroke android:width="0dp" android:color="#fff" />

            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="#ffffff" android:endColor="#ffffff" android:startColor="#ffffff" />
            <stroke android:width="1dp" android:color="#5840BB" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>