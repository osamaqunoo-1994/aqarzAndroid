            <stroke android:width="0dp" android:color="#fff" />

            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="#F7F7F7" android:endColor="#F7F7F7" android:startColor="#F7F7F7" />
