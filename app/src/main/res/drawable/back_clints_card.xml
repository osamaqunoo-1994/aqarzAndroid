    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <solid android:color="#ffffff" />

            <stroke android:width="@dimen/_1sdp" android:color="@color/editTextBackground" />

        </shape>
    </item>
</selector>