<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->


    </style>

    <style name="AppTheme.NoActionBar_home">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->

        <!--        <item name="colorPrimaryDark">@color/color_praymary_dark_home</item>-->


    </style>

    <style name="AppTheme.NoActionBar_splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->

        <item name="colorPrimaryDark">#8271AF</item>


    </style>

    <style name="AppTheme.NoActionBar_login">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->

        <item name="colorPrimaryDark">@color/white</item>


    </style>


    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/move_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>

        <item name="android:textAppearance">?attr/textAppearanceButton</item>


        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <!-- <item name="android:layout_height">@dimen/button_height</item>-->
    </style>

    <style name="AppTheme.PrimaryButton2" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/empty_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

</resources>