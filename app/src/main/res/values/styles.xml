<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/din_light</item>

    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="fontFamily">@font/din_light</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/din_light</item>

        <!--        <item name="android:fontFamily">@font/light</item>-->


    </style>

    <style name="AppThemes" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/din_light</item>

        <!--        <item name="android:fontFamily">@font/light</item>-->

    </style>

    <style name="AppTheme.NoActionBar_home">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/din_light</item>


    </style>

    <style name="AppTheme.NoActionBar_splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->
        <item name="fontFamily">@font/din_light</item>

        <item name="colorPrimaryDark">@color/colorPrimary</item>


    </style>

    <style name="AppTheme.NoActionBar_login">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->
        <item name="fontFamily">@font/din_light</item>

        <item name="colorPrimaryDark">@color/white</item>


    </style>

    <style name="AppTheme.NoActionBar_orders">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fontFamily">@font/light</item>-->

        <item name="colorPrimaryDark">#F5F5F5</item>
        <item name="fontFamily">@font/din_light</item>


    </style>


    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>

        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/move_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>

        <item name="android:textAppearance">?attr/textAppearanceButton</item>


        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <!-- <item name="android:layout_height">@dimen/button_height</item>-->
    </style>

    <style name="AppTheme.PrimaryButton2" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/empty_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f

        </item>
    </style>

    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/background_fill</item>
        <item name="android:indeterminateDrawable">@drawable/circle_wh</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>


    <style name="style_show" parent="@android:style/Widget.SeekBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="fontFamily">@font/din_light</item>

    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="fontFamily">@font/din_light</item>
    </style>
    <style name="CustomTitle3" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#40b8e0</item>
        <item name="fontFamily">@font/din_light</item>

    </style>
    <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#90000000</item>
        <item name="sv_showcaseColor">#40b8e0</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle3</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle2</item>

    </style>
</resources>