<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_b"
        android:gravity="center_horizontal"

        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/din_light"
            android:text="@string/MyQrCode"
            android:textColor="@color/colorPrimary" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="65dp"

                android:background="#F7F7F7"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_qr"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"


                android:layout_centerHorizontal="true"


                android:src="@color/colorPrimary"
                app:civ_border_color="#9777B2"
                app:civ_border_width="0dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/din_light"
            android:text="@string/text_qr"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/share_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_login"
            android:text="@string/Sgagh"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>
