<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FavoriteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_lt_arabic_bold"
                android:gravity="center"
                android:text="@string/Favorites"
                android:textColor="@color/white"
                android:textSize="17dp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ffavorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:visibility="visible">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/my_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/button_login"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/my_requst_icon"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_logo_map"
                        android:visibility="gone"
                        app:tint="@color/textColor2" />

                    <TextView
                        android:id="@+id/my_order_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/fav_1"

                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Shopping_request_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/mash">

                    <TextView
                        android:id="@+id/Shopping_request_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"


                        android:text="@string/fav_2"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Real_Estate_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/mash"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Real_Estate_order_image"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_group_1580"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/Real_Estate_order_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/fav_3"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alldate"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>