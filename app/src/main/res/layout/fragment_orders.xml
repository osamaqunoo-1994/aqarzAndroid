<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_fill"
            android:padding="8dp"
            android:src="@drawable/ic_filtter_city"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:layout_weight="1"
            android:fontFamily="@font/din_bold"
            android:gravity="center"
            android:text="@string/orders"

            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"
            android:background="@drawable/circle_w"
            android:padding="8dp"
            android:src="@drawable/ic_filtter_city"
            android:visibility="invisible"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"

        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Real_Estate_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/background_order"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Real_Estate_order_image"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_group_1580" />


                    <TextView
                        android:id="@+id/Real_Estate_order_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="@string/Real_Estate_order"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Shopping_request_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/mash">

                    <TextView
                        android:id="@+id/Shopping_request_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="3dp"
                        android:text="@string/Shoppingrequest"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"


                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/premium"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_premium_"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/type_requst_xml"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/AllOrder"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_fill_ccc"
                android:fontFamily="@font/din_light"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/all_order"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/AllOrder_number"

                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_fill_ccc"
                android:fontFamily="@font/din_bold"

                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/today"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_login"
                android:fontFamily="@font/din_light"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/order_day"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/today_number"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_ss"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Myoffer"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_fill_ccc"
                android:fontFamily="@font/din_light"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/MyOffer"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Myoffer_number"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_fill_ccc"
                android:fontFamily="@font/din_bold"

                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="10dp" />


        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/not_premium"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="@string/requered_found"
                        android:textColor="#ee5c5c"
                        android:textSize="11dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_not_prumem" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/show_fillter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MoreFiltter"
                        android:textColor="@color/colorAccent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#20cccccc" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_band_e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fillter_layoiut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/type_of_v"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_opration"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="10dp"

                        android:background="#F7F7F7" />

                    <LinearLayout
                        android:id="@+id/search_price_real_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_w"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:hint="@string/serach_price"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColorHint="#AAABB3"
                            android:textSize="13dp"></TextView>

                        <ImageView

                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_w"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/text_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="@string/search_city"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColorHint="#AAABB3"
                            android:textSize="13dp"></EditText>

                        <ImageView
                            android:id="@+id/search_btn"

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search_icon" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selected_list_citys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selected_list_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/filtter_price_market_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Order_by"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="15dp"
                            android:layout_height="10dp" />


                        <RadioButton
                            android:id="@+id/less"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimary"
                            android:text="@string/lessthan" />


                        <LinearLayout
                            android:layout_width="10dp"
                            android:layout_height="10dp" />


                        <RadioButton
                            android:id="@+id/big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimary"
                            android:text="@string/bigthan" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_login"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="@string/search"
                        android:textColor="@color/white" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orders_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </androidx.recyclerview.widget.RecyclerView>


                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/nodata_vis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:alpha=".3"
                        android:src="@drawable/ic_no_data" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="@string/nodata"
                        android:textColor="@color/textColor2" />


                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>


</LinearLayout>
