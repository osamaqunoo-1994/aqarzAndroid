<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_fill"
            android:padding="8dp"
            android:src="@drawable/ic_filtter_city"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:layout_weight="1"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:text="@string/orders"

            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/filtter_city"
            android:layout_width="37dp"
            android:layout_height="37dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_wh"
            android:padding="8dp"
            android:src="@drawable/ic_filtter_city"
            app:tint="@color/colorPrimary" />


    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/my_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/mash"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/my_requst_icon"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_logo_map"
                        android:visibility="gone"
                        app:tint="@color/textColor2" />

                    <TextView
                        android:id="@+id/my_order_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"


                        android:text="@string/MyOrder"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Shopping_request_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/mash">

                    <TextView
                        android:id="@+id/Shopping_request_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="@string/Shoppingrequest"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:id="@+id/Real_Estate_order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/background_order"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Real_Estate_order_image"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_group_1580" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/Real_Estate_order_text"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:text="@string/Real_Estate_order"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/type_requst_xml"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_fill_ccc"
        android:visibility="gone">

        <TextView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_login"
            android:fontFamily="@font/frutiger_lt_arabic_roman"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/Order_es"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/offer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/frutiger_lt_arabic_roman"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:text="@string/MyOffer"
            android:textColor="@color/black"
            android:textSize="13dp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_opration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="10dp"
                android:background="#F7F7F7">


            </androidx.recyclerview.widget.RecyclerView>


            <HorizontalScrollView
                android:id="@+id/section_horizantal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"

                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/order_type"

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:background="@drawable/background_fill_ccc">

                        <TextView
                            android:id="@+id/aqaerz_aq1"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_login"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="20dp"

                            android:paddingRight="20dp"
                            android:text="@string/aqarez_aq1"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/finince_aq1"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"

                            android:text="@string/finince_aq1"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/rent_aq1"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/rent_aq1"

                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/rate_aq1"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/rat_aq1"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/type_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/background_fill_ccc">

                        <TextView
                            android:id="@+id/For_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_login"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/For_sale"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/rent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/rent"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/type_of_v"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </HorizontalScrollView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orders_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"

                    android:paddingTop="5dp" />


                <LinearLayout
                    android:id="@+id/nodata_vis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:alpha=".3"
                        android:src="@drawable/ic_no_data" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="@string/nodata"
                        android:textColor="@color/textColor2" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
