<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".NewAqarz.Fragments.SecandFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"

        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/all_order_lay"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/border_fillter"
                android:gravity="center">

                <TextView
                    android:id="@+id/all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="@string/all_order"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/all_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="(0)"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_day_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/border_fillter"
                android:gravity="center">


                <TextView
                    android:id="@+id/order_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="@string/order_day"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_day_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="(0)"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyOffer_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_fillter"

                android:gravity="center">


                <TextView
                    android:id="@+id/MyOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="@string/MyOffer"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/MyOffer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:text="(0)"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/white"

            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:padding="11dp"
                android:src="@drawable/ic_filter_home"
                app:tint="#585755" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_filltercirc"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/search"
                android:lines="1"
                android:paddingStart="10dp"
                android:textSize="11dp"
                android:textStyle="bold">


            </EditText>

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic__search_home_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_status_offer"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/status_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/border_fillter"
                android:fontFamily="@font/din_light"
                android:gravity="center"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/asas3"
                android:textColor="@color/black"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/status_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/border_fillter"
                android:fontFamily="@font/din_light"

                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/asas2"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/status_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/border_fillter"

                android:fontFamily="@font/din_light"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/asas1"
                android:textColor="@color/black"
                android:textSize="10dp" />

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AllResultRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.recyclerview.widget.RecyclerView>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/nodata_vis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:alpha=".3"
            android:src="@drawable/ic_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/nodata"
            android:textColor="@color/textColor2" />


    </LinearLayout>


</LinearLayout>