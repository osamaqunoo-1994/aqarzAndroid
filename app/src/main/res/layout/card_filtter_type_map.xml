<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/back_ground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"


        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/image_in_type"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_filter"


            android:padding="12dp"


            android:src="@drawable/ic_test_test"
            app:tint="#AAABB3" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_light"
            android:text="تقسيط تاجير"
            android:textColor="#AAABB3"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>


</LinearLayout>
