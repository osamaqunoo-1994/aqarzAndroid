<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    tools:context=".Activity.Auth.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@null"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/immage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_44sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:srcCompat="@drawable/ic_logo_move"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_text_background">

                    <TextView
                        android:id="@+id/user_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_login"
                        android:gravity="center"
                        android:text="@string/user_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/Provider_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Provider_type"
                        android:textColor="@color/colorPrimary"

                        android:textSize="@dimen/_13sdp" />


                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/name_ed"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_user_name"


                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/name"
                android:inputType="text"

                android:layoutDirection="ltr" />

            <EditText
                android:id="@+id/email_ed"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_email"


                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"

                android:layoutDirection="ltr" />

            <EditText
                android:id="@+id/phone_ed"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_phone"


                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/phone_number"
                android:inputType="phone|number"

                android:layoutDirection="ltr" />

            <FrameLayout
                android:id="@+id/pass_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layoutDirection="ltr">

                <EditText
                    android:id="@+id/password"
                    style="@style/AppTheme.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"

                    android:drawableStart="@drawable/ic_look"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/pass_checkbox"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:button="@drawable/show_pass_bg"
                    android:checked="false"
                    android:layoutDirection="ltr"
                    android:padding="@dimen/_4sdp" />
            </FrameLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_up"
                style="@style/AppTheme.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_44sdp"
                android:paddingRight="@dimen/_44sdp"
                android:text="@string/sign_up"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/dont_have_account"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="?selectableItemBackground"
                android:gravity="end|center_vertical"
                android:text="@string/have_an_account"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_11sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                style="@style/AppTheme.PrimaryButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/login" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>