<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/with_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"

                        android:orientation="horizontal"
                        android:paddingTop="50dp"
                        android:paddingBottom="30dp">

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="#fff"
                                app:civ_border_color="#9777B2"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_profile"
                                android:layout_width="70dp"

                                android:layout_height="70dp"

                                android:src="#fff"
                                app:civ_border_color="#9777B2"
                                app:civ_border_width="2dp" />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/frutiger_lt_arabic_roman"
                                    android:gravity="start"

                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"

                                    android:textSize="18dp">


                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/info_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="center"
                                android:orientation="horizontal"

                                android:paddingLeft="15dp"
                                android:paddingRight="15dp">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_profile_icon"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="1dp"

                                    android:layout_height="1dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/frutiger_lt_arabic_light"
                                    android:text="@string/Personal_Details"
                                    android:textColor="#4A4A4A"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="20dp"

                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_uncompleat_icon"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/not_compleate"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/uncomplata"
                                    android:textColor="#EC2F2F"
                                    android:textSize="11dp" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="3dp"

                                    android:src="@drawable/ic_qr_code" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <LinearLayout
                            android:id="@+id/Favorites"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/back_more_de"
                            android:gravity="center"
                            android:orientation="horizontal"

                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_favorites_icon" />

                            <LinearLayout
                                android:layout_width="10dp"

                                android:layout_height="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/frutiger_lt_arabic_light"
                                android:text="@string/Favorites"
                                android:textColor="#4A4A4A"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="6dp"
                                android:src="@drawable/ic_left_arrow" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="30dp"

                    android:src="@drawable/ic_logo_move" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text="@string/Please_Login_or_Register"
                    android:textColor="#0D1904"
                    android:textSize="@dimen/_13sdp" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_login"

                    android:fontFamily="@font/muli_bold"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </Button>

                <Button
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_login"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="@string/Settings_title"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp">


                    <LinearLayout
                        android:id="@+id/langauge"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/back_more_de"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_lang_icon" />

                        <LinearLayout
                            android:layout_width="10dp"

                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_light"
                            android:text="@string/Language"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/language_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_left_arrow" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/terms"

                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_more_de"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_terms_icon" />

                        <LinearLayout
                            android:layout_width="10dp"

                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_light"
                            android:text="@string/Termsandcondition"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_left_arrow" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/changePassword"
                        android:layout_width="match_parent"

                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_more_de"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_change_password" />

                        <LinearLayout
                            android:layout_width="10dp"

                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_light"
                            android:text="@string/changePassword"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_more_de"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_contact_us_icon" />

                        <LinearLayout
                            android:layout_width="10dp"

                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_light"
                            android:text="@string/Call_Us"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_left_arrow" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/privecy"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_light"
                            android:text="@string/Privacy"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_left_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_logoutr_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:text="@string/Logout"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/frutiger_lt_arabic_roman"
                        android:gravity="center"
                        android:text="إصدار التطبيق V 2.0"
                        android:textSize="10dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="9dp"

                        android:background="#F8F8F8" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="@string/General_title"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/button_login"

                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_email_new"
                            app:tint="@color/white" />


                        <TextView


                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:fontFamily="@font/muli_bold"

                            android:gravity="center"
                            android:text="@string/Call_Us"
                            android:textColor="@color/white"
                            android:visibility="visible" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/email_us"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_login"
                        android:fontFamily="@font/muli_bold"
                        android:text="@string/Email_Us"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="50dp"

                        android:layout_height="50dp"
                        android:background="@drawable/circle_wh"
                        android:padding="13dp"
                        android:src="@drawable/ic_email" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_wh"
                        android:padding="13dp"
                        android:src="@drawable/ic_facebook" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/twiter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_wh"
                        android:padding="13dp"
                        android:src="@drawable/ic_twitter" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_wh"
                        android:padding="13dp"
                        android:src="@drawable/ic_instagram" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/linked"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_wh"
                        android:padding="13dp"
                        android:src="@drawable/ic_linkedin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
