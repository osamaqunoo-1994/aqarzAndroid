<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    tools:context=".Activity.Auth.LoginActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/immage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        app:srcCompat="@drawable/ic_logo_move"
        tools:ignore="VectorDrawableCompat" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/_3sdp"

        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/code_send_to_this_number"

        android:textColor="@color/textColor"
        android:textSize="@dimen/_15sdp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="5486435645"

        android:textColor="@color/textColor"
        android:textSize="@dimen/_11sdp" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="4"
        android:paddingTop="@dimen/_15sdp"
        android:textIsSelectable="false"
        android:textSize="@dimen/_13sdp"
        app:pinAnimationType="popIn"

        app:pinBackgroundDrawable="@drawable/confirm_background"

        app:pinLineColors="@color/colorPrimary"
        app:pinLineStroke="2dp"
        app:pinLineStrokeSelected="4dp"


        app:pinTextBottomPadding="@dimen/_15sdp"

        />

    <TextView
        android:id="@+id/dont_have_account"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="?selectableItemBackground"
        android:gravity="end|center_vertical"
        android:text="@string/send_code"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_11sdp" />


</LinearLayout>