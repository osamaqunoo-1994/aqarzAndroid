<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_b"
            android:orientation="vertical"
            android:padding="15dp"

            android:paddingBottom="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:visibility="visible">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/selsct_type_all"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"


                    android:visibility="gone" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:text="@string/search_filtter_order"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_filltercirc"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_location_ss"
                    app:tint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/seach_hint"
                    android:lines="1"
                    android:paddingStart="10dp"
                    android:textSize="11dp"
                    android:textStyle="bold">


                </EditText>

                <ImageView
                    android:id="@+id/clear_city"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:src="@drawable/ic_close_black_24dp" />
                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic__search_home_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_city_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/din_bold"
                android:text="@string/Type_aqarez"
                android:textColor="@color/black"

                android:textSize="15dp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/opration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"


                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/din_bold"
                android:text="@string/priceprice"
                android:textColor="@color/black"

                android:textSize="15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="30dp"

                    android:layout_height="30dp" />
            </LinearLayout>


            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/price_seekpar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                app:bar_color="#95959A"
                app:bar_highlight_color="#814C99"
                app:left_thumb_image="@drawable/thumb"
                app:max_value="1000000"
                app:min_value="0"
                app:right_thumb_image="@drawable/thumb" />

            <LinearLayout
                android:id="@+id/lay_text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:paddingBottom="5dp">


                <EditText
                    android:id="@+id/Les_price"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_search_homecc"
                    android:fontFamily="@font/din_light"
                    android:gravity="center_vertical"
                    android:hint="@string/Les_price"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/Maximum_price"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_search_homecc"
                    android:fontFamily="@font/din_light"
                    android:gravity="center_vertical"
                    android:hint="@string/Maximum_price"
                    android:inputType="number"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:text=""
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"


                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/din_bold"
                android:text="@string/area_fi"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/lay_text_space"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:paddingBottom="5dp">


                <EditText
                    android:id="@+id/Les_space"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_search_homecc"
                    android:fontFamily="@font/din_light"
                    android:gravity="center_vertical"
                    android:hint="@string/Les_space"
                    android:inputType="number"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/Maximum_space"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_search_homecc"
                    android:fontFamily="@font/din_light"
                    android:gravity="center_vertical"
                    android:hint="@string/Maximum_space"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:text=""
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"


                android:visibility="visible" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/area_sseekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                app:bar_color="#95959A"
                app:bar_highlight_color="#814C99"
                app:left_thumb_image="@drawable/thumb"
                app:max_value="1000000"
                app:min_value="0"
                app:right_thumb_image="@drawable/thumb" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/min_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_light"
                    android:text="0"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/max_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_light"
                    android:text="1000"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/din_light"
                android:text="@string/room"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:visibility="gone" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/room_1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/din_light"
                        android:gravity="center"
                        android:text="+1"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/room_2"

                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/din_light"
                        android:gravity="center"
                        android:text="+2"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/room_3"

                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/din_light"
                        android:gravity="center"
                        android:text="+3"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/room_4"

                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/din_light"
                        android:gravity="center"
                        android:text="+4"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/room_5"

                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:fontFamily="@font/din_light"
                        android:gravity="center"
                        android:text="+5"
                        android:textSize="@dimen/_13sdp" />


                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:id="@+id/filtter_btn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"

                android:background="@drawable/button_login"
                android:fontFamily="@font/din_light"

                android:gravity="center"
                android:text="@string/search"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/din_bold"
                android:gravity="center"
                android:text="@string/cancleFiltter"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>
