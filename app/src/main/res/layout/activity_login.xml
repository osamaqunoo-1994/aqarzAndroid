<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    tools:context=".Activity.Auth.LoginActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/immage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        app:srcCompat="@drawable/ic_logo_move"
        tools:ignore="VectorDrawableCompat" />


    <EditText
        android:id="@+id/phone_ed"
        style="@style/AppTheme.EditText"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_phone"

        android:drawablePadding="@dimen/_8sdp"
        android:hint="@string/phone_number"
        android:inputType="textEmailAddress"

         />

    <FrameLayout
        android:id="@+id/pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        >

        <EditText
            android:id="@+id/password"
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"

            android:drawableStart="@drawable/ic_look"
            android:drawablePadding="@dimen/_8sdp"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/pass_checkbox"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:button="@drawable/show_pass_bg"
            android:checked="false"
            android:layoutDirection="ltr"
            android:padding="@dimen/_4sdp" />
    </FrameLayout>


    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="end|center_vertical"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/forgot_your_password"

        android:textColor="@color/link_color"
        android:textSize="@dimen/_11sdp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login"
        style="@style/AppTheme.PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingLeft="@dimen/_44sdp"
        android:paddingRight="@dimen/_44sdp"
        android:text="@string/login"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/progress_view3"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dont_have_account"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="?selectableItemBackground"
        android:gravity="end|center_vertical"
        android:text="@string/don_t_have_an_account"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_11sdp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_account"
        style="@style/AppTheme.PrimaryButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/new_account" />


</LinearLayout>