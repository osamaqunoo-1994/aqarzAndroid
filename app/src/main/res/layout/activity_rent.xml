<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.OprationNew.RentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_lt_arabic_roman"
                android:gravity="center"
                android:text="@string/RentalinstallmentService"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:tint="@color/white" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="end"


                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:gravity="end"

                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/frutiger_lt_arabic_roman"
                                android:text="@string/title_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:text="@string/AqarType"
                            android:textColor="@color/textColor2"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/opration_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:gravity="center"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Duration_of_funding"
                            android:textColor="@color/textColor2"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/years"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0"
                            android:textColor="@color/textColor2"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/YearSeekbar"
                            android:textColor="@color/textColor2"
                            android:textSize="13dp" />
                    </LinearLayout>


                    <SeekBar xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/seek_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:max="30"
                        android:maxHeight="5dip"
                        android:minHeight="5dip"
                        android:paddingLeft="30px"

                        android:paddingTop="10px"
                        android:paddingRight="30px"
                        android:paddingBottom="10px"
                        android:progressDrawable="@drawable/seekbar"
                        android:thumb="@drawable/sb_thumb" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"


                            android:background="@drawable/mash"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center_vertical"
                            android:hint="@string/Price"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="@string/Information_Tenant1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <EditText
                            android:id="@+id/name_owner"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:layout_weight="1"
                            android:background="@drawable/mash"
                            android:fontFamily="@font/frutiger_lt_arabic_roman"
                            android:gravity="center_vertical"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <EditText
                            android:id="@+id/phone_owner"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"


                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/mash"
                            android:gravity="center_vertical"
                            android:hint="@string/phone_number"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <TextView
                            android:id="@+id/date_bertih"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:layout_weight="1"
                            android:background="@drawable/mash"
                            android:gravity="center_vertical"
                            android:hint="@string/Date_of_Birth"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <EditText
                            android:id="@+id/owner_id_number"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"

                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/mash"
                            android:gravity="center_vertical"
                            android:hint="@string/id_number"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/AddImageId"
                            android:textColor="@color/textColor2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/image_id_owner"
                            android:layout_width="76dp"
                            android:layout_height="76dp"

                            android:layout_margin="10dp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@drawable/ic_group_2564"
                            android:padding="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <TextView
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/mash"
                            android:gravity="center_vertical"
                            android:hint="@string/city_name"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Type_work"
                            android:textColor="@color/textColor2"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="15dp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/mash"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/governmental"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_login"
                                android:gravity="center"
                                android:text="@string/governmental"


                                android:textColor="@color/white"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/Special"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/Special"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/Soldier"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"

                                android:text="@string/Soldier"
                                android:textSize="13dp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">


                        <EditText
                            android:id="@+id/Total_salary"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:layout_weight="1"
                            android:background="@drawable/mash"
                            android:gravity="center_vertical"
                            android:hint="@string/Total_salary"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_bold"
                                android:text="@string/title_3"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Show_nayi"
                            android:textColor="@color/textColor2"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Switch
                            android:id="@+id/switch_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/SCBSwitch" />

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addres_layount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/National_attach_w"
                                    android:textColor="@color/textColor2"
                                    android:textSize="15dp" />


                            </LinearLayout>


                            <ImageView
                                android:id="@+id/natinal_image"
                                android:layout_width="66dp"
                                android:layout_height="66dp"

                                android:layout_margin="10dp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:background="@drawable/ic_group_2564"
                                android:padding="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/buldingnumber"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/buldingnumber"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/StreetName"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/StreetName"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/Neighborhoodname"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/Neighborhoodname"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/name_city"

                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/city"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/Postal_code"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/Postal_code"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/additional_number"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"

                                android:gravity="center_vertical"
                                android:hint="@string/additional_number"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="5dp">


                            <EditText
                                android:id="@+id/unit_number"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:layout_weight="1"
                                android:background="@drawable/mash"
                                android:gravity="center_vertical"
                                android:hint="@string/unit_number"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"

                                android:text=""
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                    </LinearLayout>


                    <Button
                        android:id="@+id/finish"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_login"
                        android:text="@string/Approval__request"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>