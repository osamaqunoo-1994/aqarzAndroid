<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".Activity.DetailsAqarzManActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"

            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_edit_pr" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:text="@string/upgrade"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="-90dp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="#fff"
                app:civ_border_color="#ccc"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="98dp"
                android:layout_height="98dp"

                android:src="#fff"
                app:civ_border_color="#ccc"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="96dp"


                android:layout_height="96dp"

                android:layout_centerInParent="true"
                android:src="#fff"
                app:civ_border_color="#9777B2"
                app:civ_border_width="0dp" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/frutiger_lt_arabic_bold"
                        android:textColor="#424446"

                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/frutiger_lt_arabic_roman"
                        android:textColor="#424446"
                        android:textSize="14dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/circle_fill"
                                android:padding="8dp"
                                android:src="@drawable/ic_phone" />

                            <TextView
                                android:id="@+id/mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:lines="1"

                                android:text=""
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/circle_fill"
                                android:padding="8dp"
                                android:src="@drawable/ic_email_"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:lines="1"

                                android:text=""
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_select"

                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"

                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="10dp">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapViewxx"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/member_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circle_wh">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp">


                            <TextView
                                android:id="@+id/aw1"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:background="@drawable/button_login"
                                android:gravity="center"

                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"

                                android:text="@string/aw1"
                                android:textColor="@color/white" />


                            <TextView
                                android:id="@+id/aw2"

                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"

                                android:text="@string/aw2"
                                android:textColor="@color/textColor2" />

                            <TextView
                                android:id="@+id/aw3"

                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"

                                android:text="@string/aw3"
                                android:textColor="@color/textColor2" />

                            <TextView
                                android:id="@+id/aw4"


                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"

                                android:text="@string/aw4"
                                android:textColor="@color/textColor2" />

                            <TextView
                                android:id="@+id/aw5"

                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"

                                android:text="@string/aw5"
                                android:textColor="@color/textColor2" />


                        </LinearLayout>

                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/layout_ffavorit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp">

                            <LinearLayout
                                android:id="@+id/my_order_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_marginTop="10dp"

                                android:background="@drawable/button_login"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/my_requst_icon"

                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_logo_map"
                                    android:visibility="gone"
                                    app:tint="@color/textColor2" />

                                <TextView
                                    android:id="@+id/my_order_text"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/MyOrder"


                                    android:textColor="@color/white"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle_fill"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:text="+99"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp">

                            <LinearLayout
                                android:id="@+id/Shopping_request_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_marginTop="10dp"

                                android:background="@drawable/mash">

                                <TextView
                                    android:id="@+id/Shopping_request_text"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:text="@string/Shoppingrequest"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/circle_fill"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:text="+99"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp">

                            <LinearLayout
                                android:id="@+id/Real_Estate_order_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"

                                android:background="@drawable/mash"

                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/Real_Estate_order_image"

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_group_1580"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="20dp" />

                                <TextView
                                    android:id="@+id/Real_Estate_order_text"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"

                                    android:text="@string/Real_Estate_order"
                                    android:textSize="12dp" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="20dp" />
                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/alldate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>