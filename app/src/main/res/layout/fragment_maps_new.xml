<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.mapsHome.MapsFragmentNew">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_55sdp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/get_location"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_wh"
                android:padding="9dp"
                android:src="@drawable/ic_location" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttona"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_55sdp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/chmnage_map_style"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_wh"
                android:padding="9dp"

                android:src="@drawable/ic_change_style"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/convert_map_to_list"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_wh"
                android:padding="12dp"
                android:src="@drawable/ic_list_ch"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/change_list_to_map"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_fill"
                android:padding="12dp"
                android:src="@drawable/ic_marker_lo__"
                android:visibility="gone"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/notfication"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:background="@drawable/circle_wh"
                    android:padding="8dp"
                    android:src="@drawable/ic_bell" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/TypeAqarez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"


                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/circle_wh">

                <TextView
                    android:id="@+id/RealStatr_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/din_light"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:paddingBottom="6dp"
                    android:text="@string/Title_order_1"
                    android:textColor="@color/color_filter"

                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/MarketOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/din_light"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="6dp"
                    android:text="@string/Title_order_2"
                    android:textColor="@color/color_filter"

                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/OfferOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/din_light"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="6dp"
                    android:text="@string/Title_order_3"
                    android:textColor="@color/color_filter"

                    android:textSize="11dp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</fragment>