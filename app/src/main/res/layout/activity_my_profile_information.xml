<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.Auth.MyProfileInformationActivity">

<ScrollView
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/lay"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:src="#fff"
            app:civ_border_color="#9777B2"
            app:civ_border_width="3dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:text="Mohammed Khalefa"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_profil"
            android:paddingLeft="20dp"

            android:paddingRight="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_email_t"
            android:paddingLeft="20dp"
            android:text="Mohammed Khalefa"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_phone_t"
            android:paddingLeft="20dp"
            android:text="Mohammed Khalefa"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/button_login"
            android:textColor="@color/white"
            android:text="@string/Done"
            android:fontFamily="@font/muli_bold"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>