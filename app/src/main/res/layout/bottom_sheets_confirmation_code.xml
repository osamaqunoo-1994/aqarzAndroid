<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/background_b"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            android:paddingTop="40dp">


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/tit"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/a1"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />


                <EditText
                    android:id="@+id/a2"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />


                <EditText
                    android:id="@+id/a3"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />


                <EditText
                    android:id="@+id/a4"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />
                <EditText
                    android:id="@+id/a5"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />
                <EditText
                    android:id="@+id/a6"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mash1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_login"
                    android:paddingBottom="4dp"
                    android:text="@string/anmdrj"

                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/resend"
                    android:layout_marginBottom="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mash"
                    android:paddingBottom="4dp"

                    android:text="@string/resend_now"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_fill"
            android:padding="15dp"
            android:src="@drawable/logo_png" />
    </RelativeLayout>


</LinearLayout>
