<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    tools:context=".Activity.Auth.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/back"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_marginTop="20dp"

                  android:padding="17dp"
                  android:src="@drawable/ic_back" />

          </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/immage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="@dimen/_16sdp"
                app:srcCompat="@drawable/ic_logo_map"
                tools:ignore="VectorDrawableCompat" />





            <TextView

                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"

                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_6sdp"

                android:text="@string/Enter_your_registered"

                android:textColor="#1D1D1D"
                android:textSize="@dimen/_11sdp" />


            <EditText
                android:id="@+id/email_ed"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_phone"


                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/phone_number"
                android:inputType="number"

               />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send"
                style="@style/AppTheme.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_44sdp"
                android:paddingRight="@dimen/_44sdp"
                android:text="@string/Sendbutton"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal">

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="?selectableItemBackground"
                    android:gravity="end|center_vertical"
                    android:text="@string/Didnt_Received"
                    android:textColor="#676767"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/signup"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="5dp"
                    android:background="?selectableItemBackground"
                    android:gravity="end|center_vertical"
                    android:text="@string/SendAgain_"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>